# Timezone
TZ=Australia/Melbourne
LOG_LEVEL=INFO

# Loop interval in minutes
SLEEP_MINUTES=30

# Delay to apply past release/air time
DELAY_MINUTES=60

# Tagging
AUTO_TAG_NAME=auto-unmonitored
IGNORE_TAG_NAME=ignore

# Skip items that already have files
SKIP_IF_FILE=1

# Dry run (no writes)
DRY_RUN=1

# Radarr
ENABLE_RADARR=1
RADARR_URL=http://localhost:7878
RADARR_API_KEY=YOUR_KEY
PREFERRED_RELEASE=either
IGNORE_INCINEMAS=0
# Only re-monitor movies released within this many days (0 = disabled)
RADARR_REMONITOR_WINDOW_DAYS=30

# Sonarr
ENABLE_SONARR=1
SONARR_URL=http://localhost:8989
SONARR_API_KEY=YOUR_KEY
# Only re-monitor episodes aired within this many days (0 = disabled)
SONARR_REMONITOR_WINDOW_DAYS=14

# Season Pack Mode (Sonarr only)
# When enabled, re-monitor entire season when first episode airs + delay
# Requires series to be tagged with SEASON_PACK_MODE_TAG
SEASON_PACK_MODE=0
SEASON_PACK_MODE_TAG=season-pack
